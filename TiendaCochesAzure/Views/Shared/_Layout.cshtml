<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>


        body {
            background: url('https://storagetajamarmrc.blob.core.windows.net/imagenes/black-background.jpg');
            font-size: large
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-transparent" >
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <span style="color:white"> Compra Venta De Coches</span>

            </a>
            <div class="collapse navbar-collapse" id="navbarText">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Index" class="nav-link" style="color:white">
                            <span style="color:white">Menú</span>
                        </a>
                    </li>
                    <li class="nav-item" style="color:white">
                        <a asp-controller="Coches" asp-action="GetMarcas" class="nav-link" style="color:white">Catálogo</a>
                    </li>

                    @if (Context.User.Identity.IsAuthenticated == true)
                    {
                        <li class="nav-item" style="color:white">
                            <a asp-controller="Coches" asp-action="GetMisCoches" asp-route-idusuario="@int.Parse(Context.User.FindFirst("ID").Value)" class="nav-link" style="color:white">Mis Anuncios</a>
                        </li>
                        @if (Context.User.Identity.Name.Equals("Miguel"))
                        {
                            <li class="nav-item" style="color:white">
                                <a asp-controller="Coches" asp-action="GetUsuarios" class="nav-link" style="color:white">Usuarios</a>
                            </li>
                            <li class="nav-item" style="color:white">
                                <a asp-controller="Coches" asp-action="GetAllCoches" class="nav-link" style="color:white">Todos los anuncios</a>
                            </li>
                        }
                    }
                </ul>
                <span class="navbar-text">
                    <ul class="navbar-nav mr-auto">
                        <partial name="_MenuLoginPartial" />
                        </ul>
</span>

            </div>
        </nav>
        <div style="height:2px; background-color:white"></div>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <style>
        li {
            margin-right: 10px;
            margin-left: 10px;
        }
    </style>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
